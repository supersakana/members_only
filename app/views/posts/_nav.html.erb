<nav>
    <%= link_to root_path do %>
    <h1 class="logo">MembersOnly</h1>
    <% end %>

    <ul class="nav-items">
        <% if current_user %>
            <li class="nav-item">
            <%= link_to current_user.username, edit_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "New Post", new_post_path, class: "nav-link" %>
            </li>
        <% else %>
            <li class="nav-item">
            <%= link_to_unless_current "Log in", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to_unless_current "Register", new_user_registration_path, class: "nav-link" %>
            </li>
        <% end %>
    </ul>
</nav>